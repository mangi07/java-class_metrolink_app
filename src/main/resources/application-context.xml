<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="daoFactoryBean" class="com.ben.DaoFactory"
          factory-method="createDao">
        <constructor-arg name="daoType"
                         value="#{T(com.ben.dao.DaoType).SQLITE_JDBC_DAO}"/>
        <constructor-arg name="output" ref="appOutputBean"/>
    </bean>

    <bean id="appOutputBean" class="com.ben.util.ScreenOutput"
          factory-method="getInstance"/>

</beans>
